{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec babel-node src/server.js",
    "start": "babel-node src/server.js",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*{.js,jsx,ts,tsx}": [
      "import-sort --write",
      "eslint --fix --quiet",
      "prettier --write"
    ]
  },
  "importSort": {
    ".js,.jsx": {
      "parser": "babylon",
      "style": "module"
    }
  },
  "dependencies": {
    "apollo-server": "^2.10.1",
    "apollo-server-express": "^2.10.1",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase": "^7.9.2",
    "merge-graphql-schemas": "^1.7.6"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "import-sort-cli": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1"
  }
}
